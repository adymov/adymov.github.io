
.confirm-card
    display block
    margin 0 auto


.confirm-card__grid
  display inline-block
  vertical-align top
  margin-right 40px
  width 140%

  &--anim-present
    width 100%

  &--off
    display none

.confirm-card__column
  display inline-block
  margin-right 12px
  vertical-align top

  &--anim-present
    width 100%

  &--anim-hidden
    display none
    opacity 0

.confirm-card__relative-w
  position relative
  width 100%

.confirm-card__large-container
  vertical-align top
  height auto

  &--anim-hidden
    display none
    height 0

.confirm-card__menu
  display inline-block
  margin-bottom 13px
  width 100%

  @media screen and (max-width: $mobile)
    margin 0 12px 13px

  &--anim-hidden
    // display none
    visibility hidden
    opacity 0

    @media screen and (max-width: $mobile)
      display none


  &--off
    display none

.confirm-card__item
  font-small-1()
  font-regular()
  font-caps-1()
  font-default()
  display inline-block
  position relative
  padding-left 24px
  margin-right 12px
  cursor pointer

  &::before
    position absolute
    display inline-block
    margin-top -6px
    height 20px
    width 30px
    left 0
    top 0

  &--active
    font-small-1()
    font-regular()
    font-caps-1()
    font-default()
    font-accent()

  &--user-card
    &::before
      content ''
      background url("data:image/svg+xml;base64,") no-repeat

  &--add-new
    &::before
      content ''
      background url("data:image/svg+xml;base64,") no-repeat
      // background url("data:image/svg+xml;base64,") no-repeat

  &--active&--user-card
    &::before
      background url("data:image/svg+xml;base64,") no-repeat

  &--active&--add-new
    &::before
      background url("data:image/svg+xml;base64,") no-repeat


.confirm-card__gradient
  box-shadow inset -15px -30px 20px 8px $colorGradient
  position absolute
  height 100%
  width 45px
  z-index 1
  right 0
  top 0

.confirm-card__single-card
  display inline-block
  position relative
  vertical-align top
  width 100%

  &--anim-hidden
    height 0
