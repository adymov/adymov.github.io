.card
  width 310px
  height 195px
  background $colorWhite
  border-radius 11px
  position relative
  padding 15px 29px 21px
  box-shadow 0 4px 16px 0 $colorDarkA15
  border solid 1px $colorCardBorder

  @media screen and (max-width: $mobile)
    padding 11px 15px 15px
    height 186px
    width 296px

  &--front
    z-index 1

  &--back
    position absolute
    text-align right
    padding-top 19px
    right -2px
    z-index 0
    top 48px

    @media screen and (max-width: $mobile)
      padding-top 12px
      top 75px
      right 0

  &--anim-present
    margin 0px auto 0px
    height 195px
    width 310px

    @media screen and (max-width: $mobile)
      height 186px
      width 296px


  &--anim-present-a
    margin 0px auto 0px
    height 195px
    width 310px
    z-index 1
    right 0
    left 0

    @media screen and (max-width: $mobile)
      height 186px
      width 296px


  &--present-back
    display none
    right 85px
    top 0px

    @media screen and (max-width: $mobile)
      right 4px

  &--rotate1
    padding 0
    width 0

  &--rotate2
    padding 11px 15px 15px
    width 296px

  &--mini
    margin 0
    width 185px
    height 117px
    padding 9px 16px
    border-radius 8px
    margin-bottom 10px
    cursor pointer

  &--confirm
    width 310px
    margin 0 auto

    @media screen and (max-width: $mobile)
      width 296px



  &--empty-card
    width 185px
    height 117px
    background transparent
    display table
    cursor pointer
    box-shadow none

  &--off
    display none


.empty-card__plus
  background transparent url("data:image/svg+xml;base64,")
  background-position center 26px
  background-repeat no-repeat
  background-size 34px 34px
  vertical-align middle
  display table-cell
  height 34px
  width 34px

.card__error
  position absolute
  display none

  box-shadow 0 4px 16px 0 rgba(31,48,49,0.15)
  background #fff

  font-family LatoRegular
  text-align center
  color #1f3031

  border 1px solid #e01a4f
  border-radius 8px
  margin-right -100px
  margin-top -40px
  padding 3px

  height 40px
  width 138px
  z-index 6
  right 0

  @media screen and (max-width: $mobile)
    right 30px
    margin 0
    margin-top 14px
    margin-left -16px

  &::before,
  &::after
    content ''
    position absolute
    display block
    border-style solid
    border-width 10px 10px 10px 0
    height 0
    width 0

    @media screen and (max-width: $mobile)
      border-width 0px 10px 10px 10px
      left 59px

  &::before
    top 9px
    left -10px
    border-color transparent #e01a4f transparent transparent

    @media screen and (max-width: $mobile)
      border-color transparent transparent #e01a4f transparent
      top -11px
      left 59px

  &::after
    top 9px
    left -9px
    border-color transparent #ffffff transparent transparent

    @media screen and (max-width: $mobile)
      border-color transparent transparent #ffffff transparent
      top -10px
      left 59px


  &--visible
    display block

  &--bottom
    margin-right auto
    margin-left -20px
    margin-top 13px
    right initial

    &::before,
    &::after
      border-width 0px 10px 10px 10px

    &::before
      border-color transparent transparent #e01a4f transparent
      top -11px
      left 59px

    &::after
      border-color transparent transparent #fff transparent
      top -10px
      left 59px






.card__code-confirm
  margin 0 auto
  margin-top 38px
  padding 0 14px
  width 310px

  opacity 0
  margin-top 140px

  @media screen and (max-width: $mobile)
    width 296px

  &--end
    margin-top 38px
    opacity 1

    @media screen and (max-width: $mobile)
      padding 0
      padding-left 3px
      margin-top 12px

  &--off
    display none


.card__confirm-title
  font-light-Heading-3-bold-default()
  font-heading-3()
  font-bold()
  font-default()
  display inline-block
  letter-spacing -0.6px
  margin-bottom -4px

  @media screen and (max-width: $mobile)
    font-plain()


.card__confirm-message
  font-small-1()
  font-regular()
  font-default()
  display inline-block
  letter-spacing -0.2px
  margin-bottom 9px



.card__logo-bank
  // TODO bank
  // visibility hidden
  height 30px
  max-width 80px
  margin-bottom 7px

  & img
    max-width 100%
    max-height 100%

  &--mini
    height 15px


.card__input
  font-small-1()
  font-regular()
  font-default()
  display inline-block
  margin-bottom 9px

  &--cvv
    margin-top 52px
    text-align left
    margin-bottom 4px

    @media screen and (max-width: $mobile)
      margin-top 102px

  &--card-present
    padding-top 17px

    @media screen and (max-width: $mobile)
      padding-top 15px
      margin-bottom 0


  &--mini
    padding-top 3px
    margin-bottom 7px

.card__provider_wrapper
  position relative
  width 140px
  display inline-block
  vertical-align middle
  text-align right

  &--default
    margin-top 19px
    float right
    // width 100%

    @media screen and (max-width: $mobile)
      margin-right 14px

  &--mini
    margin-top 0px
    width 100%

.card__provider
  display inline-block
  vertical-align middle
  width 27px

  &--large
    width 43px

  &--off
    display none

.card__field
  font-plain()
  font-regular()
  font-default()
  height 40px
  border-radius 8px
  background-color $colorWhite
  border solid 2px $colorDarkA30
  padding 9px 12px 8px
  outline none
  // appearance none
  // &::-webkit-outer-spin-button,
  // &::-webkit-inner-spin-button {
  //   -webkit-appearance none
  // }

  &:focus
    appearance none

  &--number
    background-position 96% 10px
    width 226px

  &--date
    background-position 89% 10px
    width 102px

  &--ccv
    background-position 89% 10px
    width 91px

  &--anim-hidden
    opacity 0
    visibility hidden
    // display none

  &--code
    width 128px

  &--present
    font-heading-3()
    font-regular()
    font-default()
    border-color transparent
    letter-spacing -0.5px
    text-align center
    width 100%
    padding 0
    // -webkit-user-select none
    // -moz-user-select none
    // -ms-user-select none
    user-select none

  &--mini
    font-small-1()
    font-regular()
    font-default()
    letter-spacing -0.2px
    cursor pointer

  &--success
    background-image url("data:image/svg+xml;base64,")
    background-repeat no-repeat
    letter-spacing -0.2px

    // &:focus
    //   border-color $colorGrennyBlue

  &--error
    background-image url("data:image/svg+xml;base64,")
    background-repeat no-repeat
    border-color $colorLipstick
    background-position 91% 10px
    // border 2px solid $colorLipstick

  &--ccv-success
    background-image url("data:image/svg+xml;base64,")
    background-repeat no-repeat
    background-position 91% 10px

.card__title
  display block
  margin 0

  &--anim-minimize
    font-size 0

.card__hint
  font-plain()
  font-regular()
  font-disabled()
  display block

  &--prefix
    position absolute
    margin-left -48px
    margin-top 11px

.card__magnet
  position absolute
  background $colorMagnet
  width 100%
  height 40px
  left 0

  @media screen and (max-width: $mobile)
    top 37px
