.receipt
  box-shadow 0 2px 6px 0 $colorDarkA15
  background-color $colorWhite
  display inline-block
  border-radius 16px
  padding 18px 39px
  text-align left
  margin-top 49px
  height 141px
  width 306px

.receipt__caption
  font-small-1()
  font-bold()
  font-secondary()
  display inline-block
  width 110px

.receipt__text
  font-light-small-1-regular-secondary()
  font-small-1()
  font-regular()
  font-secondary()
  display inline-block

.receipt__print
  font-small-1()
  font-regular()
  font-caps-2()
  font-accent()
  display inline-block
  margin-top 8px
  cursor pointer
  letter-spacing 1px
  padding 4px 0px 10px 28px
  background transparent url(../image/print.svg) no-repeat
  background-position 0px 1px
